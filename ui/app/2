import { defineComponent, HTMLAttributes, PropType } from "vue";
import { LeaderboardItem } from "../useLeaderboardData";
import { LeaderboardAvatar } from "./LeaderboardAvatar";

export const LeaderboardPodium = defineComponent({
  name: "LeaderboardPoidum",
  props: {
    item: {
      type: Object as PropType<LeaderboardItem>,
      required: true,
    },
    type: {
      type: String as PropType<"vol" | "txn">,
      required: true,
    },
    class: {
      type: String as PropType<HTMLAttributes["class"]>
    }
  },
  computed: {
    isFirst(): boolean {
      return this.item.rank === 1
    },
    wreathSrc(): string {
      return this.isFirst ? '/images/wreath.svg' : '/images/wreath-small.svg';
    }
  },
  render () {
    return (
      <div class="flex flex-col items-center">
        <LeaderboardAvatar name={this.item.name} size={this.isFirst ? 115 : 76} />
        <div class={[
          "absolute flex items-center justify-center",
          this.isFirst ? 'top-[115px]' : 'top-[76px]'
        ]}>
          <div class="translate-y-[-50%]" style={{
borderImage: 'linear-gradient(180deg, #FFDC6F 0%, #89691A 100%)',
            borderWidth: '1px'

            }}>
            text-accent-muetd"
        </div>
      </div>
    )
  }
});
